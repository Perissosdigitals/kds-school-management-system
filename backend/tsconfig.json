{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@ksp/core/*": [
        "packages/core/*"
      ],
      "@ksp/auth/*": [
        "packages/auth/*"
      ],
      "@ksp/academy/*": [
        "packages/academy/*"
      ],
      "@ksp/planning/*": [
        "packages/planning/*"
      ],
      "@ksp/finance/*": [
        "packages/finance/*"
      ],
      "@ksp/analytics/*": [
        "packages/analytics/*"
      ],
      "@ksp/import-export/*": [
        "packages/import-export/*"
      ],
      "@ksp/shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "packages/**/*",
    "apps/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}